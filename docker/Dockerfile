FROM python:3.7.4-buster                                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                                                
WORKDIR /usr/src/app                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                                                
RUN python -m pip install --upgrade pip                                                                                                                                                                                                                                         
                                                                                                                                                                                                                                                                                
COPY requirements.txt ./                                                                                                                                                                                                                                                        
RUN pip install --no-cache-dir -r requirements.txt                                                                                                                                                                                                                              
                                                                                                                                                                                                                                                                                
COPY ./ /usr/src/app 
